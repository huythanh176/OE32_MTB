<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), root_path %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <li><%= link_to t("schedules.title"), schedules_path %></li>
        <li><%= link_to t("users.signup.header_title"), signup_path %></li>
        <li><%= link_to t("theaters.title"), theaters_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("booking_details.title"), booking_details_path %></li>
          <li><%= link_to t("users.title"), admin_users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("users.account") %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.profile.title"), current_user %></li>
              <li><%= link_to t("users.settings.title"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("users.logout.title"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("users.signin.title"), signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
